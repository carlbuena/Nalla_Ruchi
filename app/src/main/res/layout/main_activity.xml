<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:text="Sign In"
        android:id="@+id/buttonSignIn"
        android:layout_gravity="center_horizontal"
        android:textSize="5pt"
        android:theme="@style/MyButton"
        android:layout_weight="1"
        android:background="#ffffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="Sign Up as Customer"
        android:id="@+id/buttonRegisterCustomer"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:textSize="5pt"
        android:theme="@style/MyButton"
        android:layout_weight="1"
        android:background="#ffffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="View All Cooks"
        android:id="@+id/buttonViewAllCooks"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:textSize="5pt"
        android:theme="@style/MyButton"
        android:layout_weight="1"
        android:background="#ffffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="View All Customers"
        android:id="@+id/buttonViewAllCustomers"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:textSize="5pt"
        android:theme="@style/MyButton"
        android:layout_weight="1"
        android:background="#ffffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="Sign Up as Cook"
        android:id="@+id/buttonRegisterCook"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:textSize="5pt"
        android:theme="@style/MyButton"
        android:layout_weight="1"
        android:background="#ffffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="View All Food"
        android:id="@+id/buttonViewAllFood"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:textSize="5pt"
        android:theme="@style/MyButton"
        android:layout_weight="1"
        android:background="#ffffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="Add Food"
        android:id="@+id/buttonAddFood"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:textSize="5pt"
        android:theme="@style/MyButton"
        android:layout_weight="1"
        android:background="#ffffff" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="View Map"
        android:id="@+id/buttonMaps"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:textSize="5pt"
        android:theme="@style/MyButton"
        android:layout_weight="1"
        android:background="#ffffff" />
</LinearLayout>
</ScrollView>